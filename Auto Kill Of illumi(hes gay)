local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source"))();

local Window = OrionLib:MakeWindow({
Name = "Raidsssss",
HidePremium=false,
SaveConfig=true,
ConfigFolder="WendelCfg",
IntroEnabled=false});

getgenv().Settings = 
{
AutoFarm1=false,
AutoFarm2=false,
}

local RaidTab = Window:MakeTab({
Name="AutoRaid",
Icon="rbxassetid://4483345998",
PremiumOnly=false});

local W1   = 
RaidTab:AddSection({
Name="Raidss"});

local dropdown = W1:AddDropdown({
    Name = "World 1",
    Default = "None",
    Options = {},
    Callback = function(Value)
        getgenv().selectedEnemy = Value
    end
})

local enemiesFolder = game.Workspace:WaitForChild("Enemys")
for _, enemy in pairs(enemiesFolder:GetDescendants()) do
    if enemy:IsA("Model") then
        local enemyName = enemy.Name
        dropdown:AddOption(enemyName)
    end
end

W1:AddToggle({
    Name = "Auto Attack",
    Default = false,
    Callback = function(Value)
        getgenv().Settings.AutoFarm1 = Value
        if Value then 
            while getgenv().Settings.AutoFarm1 do
                local hrp = game.Players.LocalPlayer.Character:WaitForChild("HumanoidRootPart")
                local EnemysFolder = game.Workspace:WaitForChild("Enemys")

                local function attackEnemy(enemy)
                    if enemy:IsA("Model") then
                        local mobID = enemy:GetAttribute("ID")
                        local humanoid = enemy:FindFirstChildOfClass("Humanoid")

                        if humanoid then
                            local mobHealth = humanoid.Health

                            if enemy:FindFirstChild("HumanoidRootPart") then
                                repeat
                                    local hrpPosition = enemy.HumanoidRootPart.CFrame
                                    hrp.CFrame = hrpPosition
                                    game:GetService("ReplicatedStorage").Remotes.AttackMob:FireServer(mobID)
                                    task.wait(0.1)
                                    mobHealth = humanoid.Health
                                until mobHealth <= 0 or not getgenv().Settings.AutoFarm1
                            end
                        end
                    end
                end

                local function processEnemies()
                    for _, enemy in pairs(EnemysFolder:GetDescendants()) do
                        if enemy:IsA("Model") then
                            attackEnemy(enemy)
                        end
                    end

                    task.wait(1) -- Add a small delay between cycles
                end

                while getgenv().Settings.AutoFarm1 do
                    processEnemies()
                    task.wait(0.01)
                end
            end
        end
    end
})

W1:AddToggle({
    Name = "Auto Target",
    Default = false,
    Callback = function(Value)
        getgenv().Settings.AutoFarm2 = Value
        if Value then 
            local hrp = game.Players.LocalPlayer.Character.HumanoidRootPart

            local enemiesFolder = game.Workspace:WaitForChild("Enemys")
            local enemyFolder = enemiesFolder:FindFirstChild(getgenv().selectedEnemy)

            if enemyFolder then
                while getgenv().Settings.AutoFarm2 do
                    if enemyFolder:IsA("Model") then
                        local humanoid = enemyFolder:FindFirstChildOfClass("Humanoid")

                        if humanoid then
                            local enemyPosition = enemyFolder.HumanoidRootPart.CFrame
                            hrp.CFrame = enemyPosition
                            game:GetService("ReplicatedStorage").Remotes.AttackMob:FireServer(enemyFolder:GetAttribute("ID"))
                            task.wait(0.1)
                        end
                    end
                    task.wait(0.01)
                end
            end
        end
    end
})
