local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source"))();

local Window = OrionLib:MakeWindow({
Name = "Raidsssss",
HidePremium=false,
SaveConfig=true,
ConfigFolder="WendelCfg",
IntroEnabled=false});

getgenv().Settings = 
{
AutoFarm1=false,
AutoFarm2=false,
}

local RaidTab = Window:MakeTab({
Name="AutoRaid",
Icon="rbxassetid://4483345998",
PremiumOnly=false});

local W1   = 
RaidTab:AddSection({
Name="Raidss"});

local enemiesFolder = game.Workspace:WaitForChild("Enemys")
local enemyOptions = {}

for _, enemy in pairs(enemiesFolder:GetDescendants()) do
    if enemy:IsA("Model") then
        local enemyName = enemy.Name
        table.insert(enemyOptions, enemyName)
    end
end

local dropdown = W1:AddDropdown({
    Name = "World 1",
    Default = "None",
    Options = enemyOptions,
    Callback = function(Value)
        getgenv().selectedEnemy = Value
    end
})

W1:AddToggle({
    Name = "Auto Attack",
    Default = false,
    Callback = function(Value)
        getgenv().Settings.AutoFarm1 = Value
        if Value then 
            local hrp = game.Players.LocalPlayer.Character:WaitForChild("HumanoidRootPart")
            local EnemysFolder = game.Workspace:WaitForChild("Enemys")
            local enemies = {}

            for _, enemy in pairs(EnemysFolder:GetDescendants()) do
                if enemy:IsA("Model") then
                    table.insert(enemies, enemy)
                end
            end

            local currentEnemyIndex = 1

            while getgenv().Settings.AutoFarm1 do
                local currentEnemy = enemies[currentEnemyIndex]

                if currentEnemy then
                    local mobID = currentEnemy:GetAttribute("ID")
                    local humanoid = currentEnemy:FindFirstChildOfClass("Humanoid")

                    if humanoid then
                        local mobHealth = humanoid.Health

                        if currentEnemy:FindFirstChild("HumanoidRootPart") then
                            repeat
                                local hrpPosition = currentEnemy.HumanoidRootPart.CFrame
                                hrp.CFrame = hrpPosition
                                game:GetService("ReplicatedStorage").Remotes.AttackMob:FireServer(mobID)
                                task.wait(0.1)
                                mobHealth = humanoid.Health
                            until mobHealth <= 0 or not getgenv().Settings.AutoFarm1
                        end
                    end

                    currentEnemyIndex = currentEnemyIndex + 1

                    if currentEnemyIndex > #enemies then
                        currentEnemyIndex = 1
                    end
                end

                task.wait(0.01)
            end
        end
    end
})

W1:AddToggle({
    Name = "Auto Target",
    Default = false,
    Callback = function(Value)
        getgenv().Settings.AutoFarm2 = Value
        if Value then 
            local hrp = game.Players.LocalPlayer.Character.HumanoidRootPart

            local enemiesFolder = game.Workspace:WaitForChild("Enemys")
            local enemies = {}

            for _, enemy in pairs(enemiesFolder:GetDescendants()) do
                if enemy:IsA("Model") then
                    table.insert(enemies, enemy)
                end
            end

            local currentEnemyIndex = 1

            while getgenv().Settings.AutoFarm2 do
                local currentEnemy = enemies[currentEnemyIndex]

                if currentEnemy then
                    local humanoid = currentEnemy:FindFirstChildOfClass("Humanoid")

                    if humanoid then
                        local enemyPosition = currentEnemy.HumanoidRootPart.CFrame
                        hrp.CFrame = enemyPosition
                        game:GetService("ReplicatedStorage").Remotes.AttackMob:FireServer(currentEnemy:GetAttribute("ID"))
                        task.wait(0.1)
                    end
                end

                currentEnemyIndex = currentEnemyIndex + 1

                if currentEnemyIndex > #enemies then
                    currentEnemyIndex = 1
                end

                task.wait(0.01)
            end
        end
    end
})
