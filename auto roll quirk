local WeaponsInventory = require(game:GetService("ReplicatedStorage").Scripts.Client.Manager.PlayerManager);

local function rerollHeroQuirk()
    local heroGuid = WeaponsInventory.localPlayerData.heros[1].guid;
    local rerollAttempt = {[1] = {["heroGuid"] = heroGuid, ["costItemId"] = 10030, ["slotIndex"] = 1}};
    local rerollResult;
    repeat
        rerollResult = game:GetService("ReplicatedStorage").Remotes.RandomGainQuirkProperty:InvokeServer(unpack(rerollAttempt));
        wait(0.1);
        if ((tostring(rerollResult.ornamentId) ~= "99009") and (tostring(rerollResult.ornamentId) ~= "99010")) then
            print("Unknown reroll found ! : " .. tostring(rerollResult.ornamentId));
        end
    until (tostring(rerollResult.ornamentId) == "99009") or (tostring(rerollResult.ornamentId) == "99010")
    local rerollType = "";
    if (tostring(rerollResult.ornamentId) == "99009") then
        rerollType = "Legendary";
    elseif (tostring(rerollResult.ornamentId) == "99010") then
        rerollType = "Rainbow";
    end
    print("!! REROLL FOUND !! : " .. rerollType);
    print("Script stopped !");
end

rerollHeroQuirk();
